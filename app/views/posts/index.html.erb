<h1>See all posts</h1>
<h3>Welcome, <%= current_user.name %></h3>
<%= link_to 'New Post', new_post_path %>
<br>
<br>
<% @posts.each do |post| %>
<%= post.title %>
<%= post.text %>
Posted by: <%= post.user.name %>

<%= link_to 'Show More', post_path(post) %> -
<%= link_to 'Edit Post', edit_post_path(post) %>
<%= link_to 'Remove Post', post_path(post), method: :delete, data: { confirm: 'Hey, are you sure you want to delete this post?'} %>
<br>
<% end %>

<br>

<%= link_to 'Log out', '/logout', { method: 'post', local: true } %>
<%= link_to 'Edit Profile', edit_user_path(current_user) %>
