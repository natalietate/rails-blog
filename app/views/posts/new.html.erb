<h1>New Post</h1>
<%= form_with scope: :post, url: posts_path, local: true do |f|  %>
<% if @post.errors.any? %>
<div id="explain_error">
  <h2>
    Uh oh! <%= pluralize(@post.errors.count, "error") %>
    prohibited this post from being saved:
  </h2>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<p>
  <%= f.label :title %> <br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :text %> <br>
  <%= f.text_area :text %>
</p>

<%= f.submit %>

<% end %>
<br>
<%= link_to 'Go Back', posts_path %>
