<div class="post-show"> <h1><%= @post.title %></h1>

<p>
  <%= @post.text %>
</p>

<em>Posted by: <%= @post.user.name %></em>
<h3>Comments:</h3>
<%= render @post.comments %>

<h3>Add Your Own Comment:</h3>
<%= render 'comments/form' %>
<br>
<% if @post.user_id == current_user.id %>
  <%= link_to 'Edit Post', edit_post_path, class: 'btn btn-outline-secondary btn-sm' %>
<% end %>
<%= link_to 'Go Back', posts_path, class: 'btn btn-outline-secondary btn-sm' %>

</div>
