<div class="post-show"> <h1><%= @post.title %></h1>

<p>
  <%= @post.text %>
</p>

<em>Posted by: <%= link_to @post.user.name, user_path %></em>
<h3>Comments:</h3>
<%= render @post.comments %>

<h3>Add Your Own Comment:</h3>
<%= render 'comments/form' %>
<br>
<% if @post.user_id == current_user.id %>
  <%= link_to 'Edit Post', edit_post_path, class: 'btn btn-outline-secondary btn-sm' %>
  <%= link_to 'Remove Post', @post_path, method: :delete, class: 'btn btn-outline-secondary btn-sm', data: { confirm: 'Hey, are you sure you want to delete this post?'} %>
<% end %>
<%= link_to 'Go Back', posts_path, class: 'btn btn-outline-secondary btn-sm' %>

</div>
