<h1>Sign In</h1>

<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="form-group">
    <%= f.submit 'Sign in' %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
